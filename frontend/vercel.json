{
	"rewrites": [
		{ "source": "/api/(.*)", "destination": "https://YOUR_RENDER_BACKEND_URL/api/$1" },
		{ "source": "/(.*)", "destination": "/index.html" }
	]
}
{
	"version": 2,
	"builds": [
		{ "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
	],
	"framework": "vite"
}

